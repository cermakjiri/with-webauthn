        "paths": {
            "~*": [
                "./src/*",
            ],
            "~public/*": [
                "./public/*"
            ],
            "@workspace/common/*": [
                "../../packages/common/dist/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ]
}