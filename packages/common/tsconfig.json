{
    "extends": "@tooling/typescript/nextjs",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "~*": [
                "./src/*"
            ],
        },
        "outDir": "dist",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "dist",
        "noEmit": false,
        "incremental": true,
        "tsBuildInfoFile": ".cache/.tsbuildinfo"
    },
    "include": [
        "./src/**/*",
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}